@{
var isAuthenticated = HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated;

}

<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <a class="navbar-brand" href="/"><i class="bi bi-bing"></i> Sofranı Paylaş</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
        <ul class="navbar-nav mx-auto">
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link" href="/">Anasayfa</a>
            </li>
            @if(isAuthenticated){
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link" asp-controller="User" asp-action="Manage">Katıldığım Etkinlikler</a>
            </li>
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link" asp-controller="Post" asp-action="Manage">Paylaşımlarım</a>
            </li>}
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link" href="/Home/About">Hakkımızda</a>
            </li>
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link" href="/Home/Contact">İletişim</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            @if (!isAuthenticated)
            {
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link btn btn-outline-primary" asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
            </li>
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link btn btn-outline-success ml-2" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
            </li>
            }
            else
            {
            @await Component.InvokeAsync("UserProfile")
            }
        </ul>
    </div>
</nav>





<style>
    /* Navbar özelleştirmeleri */
    .navbar {
        background-color: #ffffff !important;
        /* Arka plan rengi */
        padding: 15px 30px;
        width: 96%;
        margin: auto;
        border-radius: 8px;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 1em;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

    .navbar-brand {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
        transition: color 0.3s;
    }

    .navbar-brand i {
        margin-right: 10px;
    }

    .navbar-nav .nav-link {
        color: #333 !important;
        margin-right: 15px;
        font-size: 1.4em;
        font-weight: bold;
        transition: color 0.3s, background-color 0.3s;
    }

    .navbar-nav .nav-link:hover {
        color: #007bff !important;
        background-color: #f1f1f1;
        text-decoration: underline;
        border-radius: 4px;

    }

    .navbar-toggler {
        border-color: #007bff;
        transition: border-color 0.3s;
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(0, 123, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }

    .nav-link.btn {
        text-decoration: none !important;
        padding: 5px 15px;
        border-radius: 25px;
        transition: background-color 0.3s, color 0.3s;
    }

    .nav-link.btn-outline-primary {
        border-color: #007bff;
        color: #007bff !important;
    }

    .nav-link.btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff !important;
    }

    .nav-link.btn-outline-success {
        border-color: #28a745;
        color: #28a745 !important;
    }

    .nav-link.btn-outline-success:hover {
        background-color: #28a745;
        color: #fff !important;
    }

    .navbar-profile-image {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 8px;
        border: 2px solid #fff;
        transition: border-color 0.3s;
    }

    .navbar-profile-image:hover {
        border-color: #007bff;
    }
</style>